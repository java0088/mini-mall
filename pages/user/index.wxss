/* pages/user/index.wxss */
page {
  background-color: #eee;
  color: #666;
}
.user_info_wrap {
  height: 45vh;
  overflow: hidden;
  position: relative;
  background-color: var(--themeColor);
  width: 100%;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_info {
  position: absolute;
  top: 160rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}
.user_info_wrap .user_info .user_icon {
  height: 160rpx;
  width: 160rpx;
  border-radius: 50%;
}
.user_info_wrap .user_info .user_name {
  color: #fff;
  font-size: 40rpx;
  margin-top: 36rpx;
}
.user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid yellowgreen;
  color: yellowgreen;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  font-size: 36rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  top: -50rpx;
  padding: 0 30rpx;
  width: 100vw;
}
.user_content .user_main .history_wrap {
  width: 100%;
  background-color: #fff;
  display: flex;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: #f10215;
}
.orders_wrap {
  background-color: #fff;
  margin-top: 20rpx;
}
.orders_wrap .order_title {
  padding: 15rpx;
  border-bottom: 1rpx solid #ccc;
}
.orders_wrap .order_content {
  display: flex;
  margin-top: 20rpx;
}
.orders_wrap .order_content navigator {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
}
.orders_wrap .order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 34rpx;
}
.address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.app_info_wrap .app_info_item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.app_info_wrap .app_info_item text {
  flex: 1;
}
.recommend_wrap {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx;
}
