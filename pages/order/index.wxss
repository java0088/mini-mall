/* pages/order/index.wxss */
.order_main {
  color: #666;
}
.order_main .order_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.order_main .order_item .order_no_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.order_main .order_item .order_price_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.order_main .order_item .order_price_row .order_price_value {
  font-size: 34rpx;
  color: var(--themeColor);
}
.order_main .order_item .order_time_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.no_order {
  display: flex;
  width: 80%;
  margin: 60rpx auto;
  border: 4rpx solid var(--themeColor);
  height: 120rpx;
  justify-content: center;
  line-height: 120rpx;
  font-size: 42rpx;
  color: var(--themeColor);
}
